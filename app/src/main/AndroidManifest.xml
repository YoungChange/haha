<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hailer.news">

    <!--<uses-permission android:name=”android.permission.INTERNET”>-->

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:name="com.hailer.news.NewsApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hailer.news.home.NewsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hailer.news.home.ChannelManagerActivity">

        </activity>

        <activity
            android:name="com.hailer.news.home.NewsDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppThemeBack">

        </activity>

        <activity android:name="com.hailer.news.contract.ContractUsActivity"
            android:theme="@style/AppThemeBack">

        </activity>

    </application>

</manifest>