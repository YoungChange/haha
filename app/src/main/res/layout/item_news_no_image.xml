<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/home_item_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


        <TextView
            android:id="@+id/news_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NewsListTitle"
            android:lines="2"
            tools:text="中石油:美国油价便宜因不便宜因不便宜因不便宜因不便含税"/>



        <TextView
            android:id="@+id/news_summary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAppearance="@style/NewsListTime"
            tools:text="1小時前"/>

    </LinearLayout>
</LinearLayout>
