<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/home_item_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
        <TextView
            android:id="@+id/news_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/NewsListTitle"
            android:lines="1"
            tools:text="客戶機的發過來看到了"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_summary_photo1"
                android:layout_width="108dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_header"/>
            <ImageView
                android:id="@+id/news_summary_photo2"
                android:layout_width="108dp"
                android:layout_height="70dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_header"/>
            <ImageView
                android:id="@+id/news_summary_photo3"
                android:layout_width="108dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_header"/>

        </LinearLayout>

        <TextView
            android:id="@+id/news_summary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textAppearance="@style/NewsListTime"
            tools:text="1小時前"/>

    </LinearLayout>
</LinearLayout>
