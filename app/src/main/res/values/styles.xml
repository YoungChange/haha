<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控件选中后颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--含有back键的Activity 的 theme-->
    <style name="AppThemeBack" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏颜色-->
        <item name="colorPrimary">@color/colorPrimaryBack</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBack</item>
        <!--控件选中后颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--弹框Activity-->
    <style name="AppCompatActivityDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--CHB-->
    <style name="CTabLayout" parent="AppTheme">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="NewsListTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#202020</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="NewsListTime">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#808080</item>
    </style>


    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!--FacebookLoginButton-->
    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/bg_facebook_button</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>

